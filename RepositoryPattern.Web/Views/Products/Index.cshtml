@model RepositoryPattern.Web.Models.ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Products</h1>
    <a class="btn btn-primary" asp-action="Create">Create new product</a>
</div>

@if (!Model.Products.Any())
{
    <div class="alert alert-info">No products available yet. Create your first product to see it listed here.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Description</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Stock</td>
                <td>@product.Description</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@product.Id">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@if (Model.LowStockProducts.Any())
{
    <div class="alert alert-warning">
        <h2 class="h5 mb-3">Low stock warning ( @Model.LowStockThreshold units)</h2>
        <ul class="list-unstyled mb-0">
            @foreach (var product in Model.LowStockProducts)
            {
                <li class="mb-1">
                    <strong>@product.Name</strong> - @product.Stock in stock
                    <a class="ms-2" asp-action="Edit" asp-route-id="@product.Id">Restock</a>
                </li>
            }
        </ul>
    </div>
}
